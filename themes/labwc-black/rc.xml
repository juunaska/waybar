<?xml version="1.0"?>
<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->
<labwc_config>
  <core>
    <gap>1</gap>
  </core>
  <theme>
    <name>Clia-Dark</name>
    <cornerRadius>10</cornerRadius>
    <font name="CaskaydiaCove Nerd Font" size="11"/>
  </theme>
  <focus>
    <followMouse>yes</followMouse>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>
  <snapping>
    <range>1</range>
    <topMaximize>yes</topMaximize>
  </snapping>
  <keyboard>
    <default/>
    <keybind key="W-S-q">
      <action name="Close"/>
    </keybind>
    <keybind key="W-Return">
      <action name="Execute" command="kitty"/>
    </keybind>
    <keybind key="W-w">
      <action name="Execute" command="/home/test/.config/waybar/./labwc-waybar-hide.sh"/>
    </keybind>
    <keybind key="W-A-p">
      <action name="Execute" command="pcmanfm"/>
    </keybind>
    <keybind key="W-d">
      <action name="Execute" command="rofi -show run"/>
    </keybind>
    <keybind key="W-m">
      <action name="Exit"/>
    </keybind>
    <keybind key="W-S-r">
      <action name="Reconfigure"/>
    </keybind>
    <keybind key="W-o">
      <action name="GoToDesktop" to="left"/>
    </keybind>
    <keybind key="W-p">
      <action name="GoToDesktop" to="Right"/>
    </keybind>
    <keybind key="W-k">
      <action name="ToggleMaximize"/>
      <action name="Focus"/>
      <action name="Raise"/>
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop" to="1"/>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop" to="2"/>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop" to="3"/>
    </keybind>
    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute" command="amixer sset Master 5%-"/>
    </keybind>
    <keybind key="XF86_AudioRaiseVolume">
      <action name="Execute" command="amixer sset Master 5%+"/>
    </keybind>
    <keybind key="XF86_AudioMute">
      <action name="Execute" command="amixer sset Master toggle"/>
    </keybind>
    <keybind key="XF86_MonBrightnessUp">
      <action name="Execute" command="brightnessctl -q set 2%+"/>
    </keybind>
    <keybind key="XF86_MonBrightnessDown">
      <action name="Execute" command="brightnessctl -q set 2%-"/>
    </keybind>
  </keyboard>
  <mouse>
    <default/>
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="None"/>
      </mousebind>
      <mousebind button="Left" action="Press">
        <action name="None"/>
      </mousebind>
    </context>
  </mouse>
  <desktops>
    <popupTime>1000</popupTime>
    <names>
      <name>I</name>
      <name>II</name>
      <name>III</name>
    </names>
  </desktops>
  <libinput>
    <device>
      <naturalScroll>yes</naturalScroll>
    </device>
  </libinput>
</labwc_config>
